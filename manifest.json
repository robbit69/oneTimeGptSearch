{
  "manifest_version": 3,
  "name": "GPT Search",
  "version": "1.0.3",
  "description": "一键使用 GPT Search 搜索",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "omnibox": {
    "keyword": "g"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "trigger-search": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "触发搜索"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html"
  }
} 
